#include<iostream>
#include<limits>
#include<stdlib.h>
using namespace std;

int ChuSoLonNhat(int Max,int n)          //Max b?t d?u là n%10
{
	if (n%10==0)
		{
			return Max;
		}
	Max=(Max>n%10)?Max:n%10;
	
	return ChuSoLonNhat(Max,n/10);
}
int check(char* a)
{
	int i=0;
	while(a[i]!=NULL)
	{
		if(a[i]<'0' || a[i] > '9')
		return 0;
		i++;
	}
	return 1;
}
int main()
{
	int a[10];
	cout<<"\nMoi nhap chu so n: ";  cin>>a; check(a);
	long int n = atoi(a);
	cout<<"\nChu so lon nhat trong "<<n<<" la: "<<ChuSoLonNhat(n)<<endl;
	return 0;
}
