#include<iostream>
using namespace std;

void input_arr(int arr[], int length)
{
	for(short i = 0 ; i<length ; i++)
	{
		cin>>arr[i];
		
	}
}
void show_arr(int arr[], int length)
{
	for(short i =0 ; i<length ; i++)
	{
		cout<<arr[i]<<" ";
	}
	cout<<endl;
}
void Insert(int arr[], int n, int value, int pos)
{
	for(int i=n-1 ; i>= pos-1 ; i--)
	{
		arr[i+1] = arr[i];
	}
	arr[pos-1] = value;
	cout<<"\nMang sau khi chen la: ";
	show_arr(arr,n);
}
int main()
{
	int arr[100],pos, i, n, value;
	cout<<"\nNhap so phan tu cua mang: ";  cin>>n;
	cout<<"\nNhap cac phan cua mang: ";  input_arr(arr,n);
	cout<<"\nCac phan tu da nhap:\n";  show_arr(arr,n);
	cout<<"\nNhap vi tri chen phan tu : "; cin>>pos;
	cout<<"\nNhap gia tri phan tu muon chen: ";  cin>>value;
	Insert(arr,n,value,pos);
	delete arr;
	return 0;
}
