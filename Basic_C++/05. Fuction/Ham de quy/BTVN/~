#include<iostream>
#include<limits>
using namespace std;

int TONGCHANLE(int n)
{
	if(n == 0)
	{
		return 0;
	}
	for(int i=1 ; i<=n ; i++)
	{
		if(n%2 == 0)
		{
			return TONGCHANLE(n/10) + (n%10);
			return TONGCHANLE(n/10);
		}else{
			return TONGCHANLE(n/10) + (n%10);
			return TONGCHANLE(n/10);
		}
	}
	
}
int check(float &n)
{
	do{
		if(!n || n != (int)n)
		{
			cin.clear();
			cin.ignore(numeric_limits<streamsize>::max(),'\n');
			cout<<"\nSo nhap vao yeu cau la mot so nguyen: ";
			cin>>n;
		}
	}while(!n || n != (int)n);
}

int main()
{
	
	float n;
	cout<<"\nMoi nhap gia tri n: ";
	cin>>n; check(n);
	if(n%2==0)
	{
		cout<<"\nTong "<<n<<" so chan dau tien la: "<<TONGCHANLE(n)<<endl;
	}else{
		cout<<"\nTong "<<n<<" so le dau tien la: "<<TONGCHANLE(n)<<endl;
	}
	return 0;
}

